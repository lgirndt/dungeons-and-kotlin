<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%highlight(%-5level) %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root logger - only CONSOLE appender -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>

    <!-- CLI specific logging -->
    <logger name="cli" level="DEBUG" />
</configuration>
