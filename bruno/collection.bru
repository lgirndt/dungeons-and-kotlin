meta {
  name: dungeons-and-kotlin
}

script:pre-request {
  // Use dev token from environment for all requests except login
  if (req.getUrl().includes("/api/auth/login")) {
    return;
  }

  // Set authToken to the dev token from environment
  const devToken = bru.getEnvVar("devToken");
  if (devToken) {
    bru.setVar("authToken", devToken);
  }
}
