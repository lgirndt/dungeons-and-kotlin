<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Import Spring Boot's base configuration for defaults and property support -->
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <!-- File appender -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/cli-application.log</file>
        <immediateFlush>true</immediateFlush>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/cli-application.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
    </appender>

    <!-- Root logger - FILE and CONSOLE appenders -->
    <root level="INFO">
        <appender-ref ref="FILE" />
    </root>
</configuration>
